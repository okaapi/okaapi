<h1>Listing okaapis</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Subject</th>      
      <th>Content</th>
      <th>Time</th>
      <th>From</th>
      <th>Reminder</th>
      <th>Archived</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @okaapis.each do |okaapi| %>
      <tr>
        <td><%= okaapi.id %></td>
        <td><%= okaapi.subject %></td>
        <td><%= okaapi.content %></td>
        <td><%= okaapi.time %></td>
        <td><%= okaapi.from %></td>
        <td><%= okaapi.reminder %></td>
        <td><%= okaapi.archived %></td>
        <td><%= okaapi.user_id %></td>
        <td><%= link_to 'Show', okaapi %></td>
        <td><%= link_to 'Edit', edit_okaapi_path(okaapi) %></td>
        <td><%= link_to 'Destroy', okaapi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Okaapi', new_okaapi_path %>

<%= form_tag({action: :upload}, multipart: true) do %>
  <%= file_field_tag 'file' %>
  <%= submit_tag 'upload' %>
<% end %>


