<!DOCTYPE html>
<html>
<head>
  <title>Okaapi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body <%= ("class=\"background_decoration\"".html_safe unless @current_user) %> >

  <%= render "auth/authenticate/layout_insert" %>
  
  <% if flash[:alert] %>
    <p id="alert"><%= flash[:alert] %></p>
  <% end %>  
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>
  
  <div id="application">
    <%= yield %>
  </div>

  <% if ( @current_user and @current_user.admin? ) %>
	  <div class="cleardiv" id="version"> <small>
	    Application <%= controller.controller_name %> / <%= controller.action_name %> 
	    Ruby <%= RUBY_VERSION%> Rails <%= Rails.version %> <%= Rails.env %> 
	    user <%= @current_user.username if @current_user %> 
 <br> <br>
	  </small> </div>
  <% else %>
	  <div class="cleardiv" id="version"> <small>
      <%= RUBY_VERSION%> <%= Rails.version %> <%= Rails.env[0] %> 
	  </small> </div>  	  
  <% end %>
</body>
</html>
