<!DOCTYPE html>
<html>
<head>
  <title>Okaapi2</title>
  <%= stylesheet_link_tag    'application', "auth/application", media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- div style="background-color:white"><%= debug @user if @user %></div -->
  
  <%= render "auth/authenticate/layout_insert" %>
  
  <% if flash[:alert] %>
    <p id="alert"><%= flash[:alert] %></p>
  <% end %>  
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>
  
  <div id="application">
    <%= yield %>
  </div>

</body>
</html>
