<!DOCTYPE html>
<html>
<head>
  <title>Okaapi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body <%= ("class=\"background_decoration\"".html_safe unless @user) %> >

  <%= render "auth/authenticate/layout_insert" %>
  
  <% if flash[:alert] %>
    <p id="alert"><%= flash[:alert] %></p>
  <% end %>  
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>
  
  <div id="application">
    <%= yield %>
  </div>

  <div class="cleardiv">
    Version: <%= controller.controller_name %> <%= controller.action_name %> <%= RUBY_VERSION%> <%= Rails.version %>
  </div>
</body>
</html>
