
<!DOCTYPE html>
<html>
<head>
  <title><%= @center ? @center.name : "" %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <%= render "authenticate/layout_insert" %>
  
  <% if flash[:alert] %>
    <p id="alert"><%= flash[:alert] %></p>
  <% end %>  
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>
  
  <div id="application">
    <%= yield %>
  </div>


  <div class="cleardiv" id="version"> <small> <small> 
  <%= RUBY_VERSION%> <%= Rails.version %> <%= Rails.env[0] %> 
   </small> </small> </div>  

</body>
</html>

